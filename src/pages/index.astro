---
// Personal info - customize these!
const name = "Yuval Ginor";
const title = "Builder, Researcher, Learner";
const profileImage = "/profile.jpg"; // Place your profile image in public/
const socialLinks = {
  github: "https://github.com/yourusername",
  twitter: "https://twitter.com/yourusername",
  scholar: "https://scholar.google.com/citations?user=yourid",
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Personal website" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{name} - {title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <button class="theme-toggle" id="theme-toggle" aria-label="Toggle dark mode">
      <svg class="sun" viewBox="0 0 24 24">
        <circle cx="12" cy="12" r="5"/>
        <line x1="12" y1="1" x2="12" y2="3"/>
        <line x1="12" y1="21" x2="12" y2="23"/>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
        <line x1="1" y1="12" x2="3" y2="12"/>
        <line x1="21" y1="12" x2="23" y2="12"/>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
      </svg>
      <svg class="moon" viewBox="0 0 24 24">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
      </svg>
    </button>
    <main class="container">
      <header class="header">
        <img 
          src={profileImage} 
          alt={`${name} profile picture`} 
          class="profile-image"
        />
        <div class="header-content">
          <h1 class="name">{name}</h1>
          <p class="title">{title}</p>
          <div class="social-links">
            <a href={socialLinks.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
            <a href={socialLinks.twitter} target="_blank" rel="noopener noreferrer" aria-label="Twitter">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
            <a href={socialLinks.scholar} target="_blank" rel="noopener noreferrer" aria-label="Google Scholar" class="scholar-link">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <rect x="2" y="2" width="20" height="20" rx="2" fill="currentColor"/>
                <text x="12" y="17" font-family="Arial, sans-serif" font-size="14" font-weight="bold" text-anchor="middle" fill="white">G</text>
              </svg>
            </a>
          </div>
        </div>
      </header>

      <div class="content">
        <section class="section">
          <p>
            I'm a technologist and builder passionate about [your interests]. 
            I believe in [your beliefs and values].
          </p>
        </section>

        <section class="section">
          <p>
            My fundamental belief is that [your philosophy]. 
            I'm excited about [what excites you] and the potential to [your vision].
          </p>
        </section>

        <section class="section">
          <p>
            At <a href="#" class="link">[Your Company/Project]</a>, we take a pragmatic approach: 
            we build products people will use today to understand [your goals].
          </p>
        </section>

        <section class="section">
          <p>
            I've worked on various projects including 
            <a href="#" class="link">[Project 1]</a>, 
            <a href="#" class="link">[Project 2]</a> 
            (<a href="#" class="link">[Link]</a>), 
            <a href="#" class="link">[Project 3]</a>, 
            <a href="#" class="link">[Project 4]</a>, 
            and more.
          </p>
        </section>
      </div>
    </main>
    <script>
      // Dark mode toggle functionality
      (function() {
        const themeToggle = document.getElementById('theme-toggle');
        const html = document.documentElement;
        
        // Check for saved theme preference or default to light mode
        const savedTheme = localStorage.getItem('theme') || 'light';
        html.setAttribute('data-theme', savedTheme);
        
        themeToggle.addEventListener('click', () => {
          const currentTheme = html.getAttribute('data-theme');
          const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
          html.setAttribute('data-theme', newTheme);
          localStorage.setItem('theme', newTheme);
        });
      })();
    </script>
  </body>
</html>

