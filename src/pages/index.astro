---
import { getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Get the home page from content collection
const homeEntry = await getEntry('pages', 'home');
const { Content } = await homeEntry.render();
---

<BaseLayout 
  title={homeEntry.data.title}
  description={homeEntry.data.description}
>
  <div class="prose prose-neutral dark:prose-invert mt-12 max-w-none">
    <Content />
  </div>
</BaseLayout>
